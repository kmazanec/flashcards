<div class="game_container">
  <div class="deck_title">
    <h2>Deck: <%= current_game.deck.title %></h2>
  </div>
  <% if session[:last_guess_correct] %>
    <div id="correct_banner" class="correct banner">
      <h3>Goose! You're on it!</h3>
    </div>
  <% elsif session[:last_guess_correct] == false %>
    <div id="incorrect_banner" class="incorrect banner">
      <h3>Quack! That's not quite right...</h3>
    </div>
  <% end %>

  <%= erb :_card, layout: false %>

  <div class="game_nav_container">
    <div class="submit_container">
      <form action="/deck/<%= @game.deck.id %>/<%= @game.last_card_id %>" method="get">
        <input class="nav_button" type="submit" value="< Previous Card">
      </form>
    </div>
    <div class="submit_container">
      <form action="/deck/<%= @game.deck.id %>/<%= @game.next_card_id %>">
        <input class="nav_button" type="submit" value="Skip this card >">
      </form>
    </div>
  </div>

  <div class="card_counter">
    <h4>Card <%= %> of <%= %></h4>
  </div>

</div>