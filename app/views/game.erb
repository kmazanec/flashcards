<div class="game_container">
  <h2><%= current_game.deck.title %></h2>
  <% if session[:last_guess_correct] %>
  <div id="correct_banner" class="correct banner">
    <h3>Your last guess was correct!</h3>
  </div>
  <% end %>

  <%= erb :_card, layout: false %>

  <% if session[:last_guess_correct] == false %>
  <div id="incorrect_banner" class="incorrect banner">
    <h3>Incorrect</h3>
  </div>
  <% end %>

  <div>
    <h4>Card <%= %> of </h4>
  </div>

</div>