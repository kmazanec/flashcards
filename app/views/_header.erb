<div class="logo">
  <a href='/'>Flash Cards</a>
</div>

<% if logged_in? %>
  <div class="form">
    <form action="/logout" method="POST">
      <div class="user"><a class="link" href="/user"><%= current_user.name %></a></div>
      <div class="button"><input type="submit" value="Log out"></div>
    </form>
  </div>
<% else %>

<div class="form">
  <form action="/login" method="POST">
    <div class="field">
      <input id="f-email" type="text" id="email" value="email" name="user[email]">
    </div>

    <div class="field">
      <input class="password" id="f-password" type="text" id="password" value="password" name="user[password]">
    </div>

    <div class="button">
      <input type="submit" value="Log in">
    </div>
  
  </form>
</div>
<% end %>
